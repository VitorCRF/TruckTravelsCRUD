@model TruckTravelsCRUD.Models.Travel

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja excluir essa viagem?</h3>
<div>
    <h4>Travel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            ID motorista
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverId)
        </dd>
        <dt class = "col-sm-2">
            Destino
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class = "col-sm-2">
            Partida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartFrom)
        </dd>
        <dt class = "col-sm-2">
            Distância total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalDistance)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
