@model TruckTravelsCRUD.Models.Travel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                <input asp-for="Date" class="form-control" placeholder="Data da viagem" required/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label">ID motorista</label>
                <input asp-for="DriverId" class="form-control" placeholder="Número identificador" required/>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label">Destino</label>
                <input asp-for="Destination" class="form-control" placeholder="Cidade de destino" required/>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartFrom" class="control-label">Partida</label>
                <input asp-for="StartFrom" class="form-control" placeholder="Cidade de partida" required/>
                <span asp-validation-for="StartFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalDistance" class="control-label">Distância</label>
                <input asp-for="TotalDistance" class="form-control" required/>
                <span asp-validation-for="TotalDistance" placeholder="Kilômetros totais de distância"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
